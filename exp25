#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, i, j, seek = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence: ");
    for (i = 0; i < n; i++) scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    // Sort
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (req[j] > req[j+1]) {
                int tmp = req[j]; req[j] = req[j+1]; req[j+1] = tmp;
            }
        }
    }

    int idx;
    for (i = 0; i < n; i++) if (head < req[i]) { idx = i; break; }

    for (i = idx; i < n; i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    for (i = idx - 1; i >= 0; i--) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    printf("Total Seek Time = %d\n", seek);
    printf("Average Seek Time = %.2f\n", (float)seek / n);
    return 0;
}
//
Enter number of requests: 5
Enter request sequence: 55 58 39 18 90
Enter initial head position: 50

Total Seek Time = 242
Average Seek Time = 48.40
